{
  "name": "bulk-delete",
  "title": "Bulk Delete",
  "description": "Bulk Delete is a WordPress Plugin that allows you to delete posts, pages, users and meta fields in bulk based on different conditions and filters.",
  "version": "5.6.1",
  "homepage": "https://bulkwp.com",
  "license": "GPLv2+",
  "author": {
    "name": "Bulk WP",
    "email": "support@bulkwp.com",
    "url": "https://bulkwp.com"
  },
  "bugs": {
    "url": "https://github.com/sudar/bulk-delete/issues",
    "email": "support@bulkwp.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sudar/bulk-delete.git"
  },
  "dependencies": {
    "jquery-ui-timepicker-addon": "1.6.3",
    "select2": "4.0.5"
  },
  "devDependencies": {
    "grunt": "^1.0.3",
    "grunt-contrib-clean": "^1.1.0",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^2.2.1",
    "grunt-contrib-jshint": "^1.1.0",
    "grunt-contrib-uglify": "^3.3.0",
    "grunt-contrib-watch": "^1.1.0",
    "matchdep": "^2.0.0",
    "time-grunt": "^1.4.0"
  },
  "scripts": {
    "phpunit": "vendor/bin/phpunit",
    "phpdbg": "phpdbg -qrr vendor/bin/phpunit",
    "test:unit": "npm run phpunit",
    "test:unit:coverage": "npm run phpdbg -- --coverage-php code-coverage/unit.cov",
    "test:mock": "npm run phpunit -- --configuration phpunit-wp-mock.xml.dist",
    "test:mock:coverage": "npm run phpdbg --  --configuration phpunit-wp-mock.xml.dist --coverage-php code-coverage/mock.cov",
    "test:php": "npm run test:mock && npm run test:unit",
    "test:php:coverage": "rm -rf code-coverage && mkdir code-coverage && npm run test:mock:coverage && npm run test:unit:coverage",
    "phpcov": "vendor/bin/phpcov merge code-coverage/",
    "test:php:coverage:html": "npm run test:php:coverage && npm run phpcov -- --html code-coverage/html/",
    "test:php:coverage:cover": "npm run test:php:coverage && npm run phpcov -- --clover=code-coverage/bulk-delete.clover",
    "phpcs": "vendor/bin/phpcs -p *.php include/ --standard=PHPCompatibility --runtime-set testVersion 5.3-"
  },
  "private": true
}
